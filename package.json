{
    "name": "@carllee1983/newebpay-logistics",
    "version": "1.0.1",
    "description": "藍新金流物流 SDK - NewebPay Logistics SDK for Node.js",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "type": "module",
    "exports": {
        ".": "./dist/index.js"
    },
    "scripts": {
        "build": "tsc",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "test:ui": "vitest --ui",
        "prepublishOnly": "npm run build",
        "lint": "eslint 'src/**/*.ts'",
        "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\""
    },
    "keywords": [
        "newebpay",
        "logistics",
        "node",
        "typescript",
        "sdk"
    ],
    "author": "Carl Lee",
    "license": "MIT",
    "devDependencies": {
        "@types/node": "^20.0.0",
        "@typescript-eslint/eslint-plugin": "^8.49.0",
        "@typescript-eslint/parser": "^8.49.0",
        "@vitest/coverage-v8": "^1.6.1",
        "eslint": "^8.0.0",
        "prettier": "^3.0.0",
        "typescript": "^5.0.0",
        "vitest": "^1.0.0"
    },
    "dependencies": {
        "zod": "^3.0.0"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
